                            <TextBlock Text="{Binding SC}"/>
                        </StackPanel>
                    </dx:DXTabItem.Header>
                    <Grid  Margin="-8">
                        <Grid.Resources>
                            <Style TargetType="{x:Type dxg:GridColumn}">
                                <Setter Property="HorizontalHeaderContentAlignment" Value="Center" />
                            </Style>
                        </Grid.Resources>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="{Binding HeaderHeight}"/>
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <Border Grid.Row="0" Visibility="{Binding HeaderVisible}" Background="White" BorderBrush="#d8d8d8" BorderThickness="1" Margin="0,0,0,5">
