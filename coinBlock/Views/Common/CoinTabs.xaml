                                <dxg:TableView  RowMinHeight="28" HeaderPanelMinHeight="28"  VerticalScrollbarVisibility="Auto" HorizontalScrollbarVisibility="Auto" AllowPerPixelScrolling="True" ShowTotalSummary="False" ShowGroupPanel="False" AllowColumnFiltering="False" AllowFilterEditor="False" AllowColumnMoving="False" AllowEditing="False" AllowGrouping="False" AllowMoveColumnToDropArea="False" ShowAutoFilterRow="False" AutoWidth="True" NavigationStyle="None" ShowIndicator="False" ShowVerticalLines="False" AllowSorting="False">
                                    <dxg:TableView.FormatConditions>
                                        <dxg:FormatCondition Expression="[chgPrc] &gt; 0" FieldName="chgPrc">
                                            <dx:Format Foreground="#fc7777"/>
                                        </dxg:FormatCondition>
                                        <dxg:FormatCondition Expression="[chgPrc] &lt; 0" FieldName="chgPrc">
                                            <dx:Format Foreground="#0093cf"/>
                                        </dxg:FormatCondition>
                                        <!--<dxg:FormatCondition Expression="[coinNm] = 'ADM'" ApplyToRow="True">
                                            <dx:Format Background="#c2deff"/>
                                        </dxg:FormatCondition>-->
                                        <dxg:IconSetFormatCondition FieldName="volume" >
                                            <dxg:IconSetFormatCondition.Format>
                                                <dxg:IconSetFormat ElementThresholdType="Number">
                                                    <dxg:IconSetElement Threshold="0.00000001" ThresholdComparisonType="GreaterOrEqual">
                                                        <dxg:IconSetElement.Icon>
                                                            <BitmapImage  UriSource="/coinBlock;component/Images/ico_up_arr_red.png"/>
                                                        </dxg:IconSetElement.Icon>
                                                    </dxg:IconSetElement>
                                                    <dxg:IconSetElement Threshold="0" ThresholdComparisonType="GreaterOrEqual">
