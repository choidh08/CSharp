                                    </DataTemplate>
                                </dxg:GridColumn.CellTemplate>
                            </dxg:GridColumn>
                            <dxg:GridColumn Header="{x:Static localization:Resource.ExchangeDashoard_Gird_1_4_1}" FieldName="chgPrc" Width="110"  Visible="False">
                                <dxg:GridColumn.CellTemplate>
                                    <DataTemplate>
