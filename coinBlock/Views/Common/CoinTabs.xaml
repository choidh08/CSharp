                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="60"/>
                                    <ColumnDefinition Width="60"/>
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <Border Grid.Column="0" >
                                    <Image Source="{Binding img_main_coin, TargetNullValue={x:Null}}" Width="26" />
                                </Border>

                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="Quotes" Foreground="#666"/>
                                    <TextBlock Text="Rate" Foreground="#666"/>
                                    <TextBlock Text="Volume" Foreground="#666"/>
                                </StackPanel>

                                <StackPanel Grid.Column="2" VerticalAlignment="Center">
                                    <TextBlock Text="{Binding txt_Quotes, StringFormat={}{0:n0}}" Foreground="#666"/>
                                    <TextBlock Text="{Binding txt_Rate, StringFormat='{}{0:n2}%'}" Foreground="#666"/>
                                    <TextBlock Text="{Binding txt_Volume, StringFormat={}{0:n8}}" Foreground="#666"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                        <dxg:GridControl Grid.Row="1" ItemsSource="{Binding CoinPriceData}" SelectedItem="{Binding SelectItem}" dxlc:LayoutControl.AllowHorizontalSizing="True" SelectionMode="Row" dx:ThemeManager.Theme="Office2013LightGray" >
