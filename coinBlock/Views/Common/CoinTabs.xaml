                                                            <BitmapImage UriSource="/coinBlock;component/Images/ico_down_arr_blue.png"/>
                                                        </dxg:IconSetElement.Icon>
                                                    </dxg:IconSetElement>
                                                </dxg:IconSetFormat>
                                            </dxg:IconSetFormatCondition.Format>
                                        </dxg:IconSetFormatCondition>
                                    </dxg:TableView.FormatConditions>                                   
                                </dxg:TableView>
