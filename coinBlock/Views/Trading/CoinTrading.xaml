                                                    <TextBlock Text="{Binding CoinInfo.ytdTotPrc, StringFormat={}{0:n0}}" FontSize="11" Foreground="#333" HorizontalAlignment="Right" Margin="0,5,1,0"/>-->
                                                </StackPanel>
                                            </Border>
                                            <Border Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="2">
                                                <!-- 일별시세 버튼 추가-->
                                                <Button Width="150" Height="25" Margin="0,10,0,0" Cursor="Hand"  VerticalAlignment="Top"  Command="{Binding CmdDayPrcPopupCommand}">
                                                    <Button.Style>
                                                        <Style TargetType="{x:Type Button}">
                                                            <Setter Property="Template">
                                                                <Setter.Value>
                                                                    <ControlTemplate TargetType="{x:Type Button}">
                                                                        <Grid>
                                                                            <Image Name="btnImg" Source="{Binding btn_daily_market, TargetNullValue={x:Null}}"/>
                                                                        </Grid>
                                                                        <ControlTemplate.Triggers>
                                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                                <Setter Property="Source" TargetName="btnImg" Value="{Binding btn_daily_market_on}"/>
                                                                            </Trigger>
                                                                        </ControlTemplate.Triggers>
