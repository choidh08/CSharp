                                                                <Binding Path="CoinInfo.floatFormat" />
                                                            </MultiBinding>
                                                        </TextBlock.Text>
                                                    </TextBlock>

                                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,5,0,0">
                                                        <TextBlock Text="(" FontSize="12" />
