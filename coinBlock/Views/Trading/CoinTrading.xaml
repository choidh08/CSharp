                                                        <TextBlock Text="(" FontSize="12" />
                                                        <TextBlock Text="{Binding CoinInfo.ytdPer, StringFormat={}{0:n2}}" Foreground="{Binding CoinInfo.ytdColor, TargetNullValue={x:Null}}" FontSize="12" />
                                                        <TextBlock Text="%" FontSize="12" />
                                                        <TextBlock Text=")" FontSize="12" />
                                                    </StackPanel>
                                                    <TextBlock Foreground="{Binding CoinInfo.maxColor, TargetNullValue={x:Null}}" FontSize="12" HorizontalAlignment="Right" Margin="0,6,0,0">
                                                        <TextBlock.Text>
                                                            <MultiBinding Converter="{StaticResource FloatConvert}">
                                                                <Binding Path="CoinInfo.maxPrc" />
                                                                <Binding Path="CoinInfo.floatFormat" />
                                                            </MultiBinding>
                                                        </TextBlock.Text>
                                                    </TextBlock>
                                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,5,0,0">
                                                        <TextBlock Text="(" FontSize="12" />
                                                        <TextBlock Text="{Binding CoinInfo.maxPer, StringFormat={}{0:n2}}" Foreground="{Binding CoinInfo.maxColor, TargetNullValue={x:Null}}" FontSize="12" />
                                                        <TextBlock Text="%" FontSize="12" />
                                                        <TextBlock Text=")" FontSize="12" />
                                                    </StackPanel>
                                                    <TextBlock Foreground="{Binding CoinInfo.minColor, TargetNullValue={x:Null}}" FontSize="12" HorizontalAlignment="Right" Margin="0,6,0,0">
                                                        <TextBlock.Text>
                                                            <MultiBinding Converter="{StaticResource FloatConvert}">
                                                                <Binding Path="CoinInfo.minPrc" />
                                                                <Binding Path="CoinInfo.floatFormat" />
                                                            </MultiBinding>
                                                        </TextBlock.Text>
                                                    </TextBlock>
                                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,5,0,0">
                                                        <TextBlock Text="(" FontSize="12" />
                                                        <TextBlock Text="{Binding CoinInfo.minPer, StringFormat={}{0:n2}}" Foreground="{Binding CoinInfo.minColor, TargetNullValue={x:Null}}" FontSize="12" />
                                                        <TextBlock Text="%" FontSize="12" />
                                                        <TextBlock Text=")" FontSize="12" />
                                                    </StackPanel>
                                                    <TextBlock FontSize="12" HorizontalAlignment="Right" Margin="0,7,0,0">
                                                        <TextBlock.Text>
                                                            <MultiBinding Converter="{StaticResource FloatConvert}">
                                                                <Binding Path="CoinInfo.svcTranAmt" />
                                                                <Binding Path="CommonNum" />
                                                            </MultiBinding>
                                                        </TextBlock.Text>
                                                    </TextBlock>
                                                    <!--<StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,13,0,0">
                                                        <TextBlock Text="{Binding CoinInfo.totAmt, StringFormat={}{0:n0}}" FontSize="11" Foreground="#333" HorizontalAlignment="Right" />
                                                        <TextBlock Text="{Binding ViewCoinName}" FontSize="11" Foreground="#333" HorizontalAlignment="Right" Margin="2,0,0,0" />
                                                    </StackPanel>
                                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,5,0,0">
                                                        <TextBlock Text="{Binding CoinInfo.ytdAmt, StringFormat={}{0:n0}}" FontSize="11" Foreground="#333" HorizontalAlignment="Right" />
                                                        <TextBlock Text="{Binding ViewCoinName}" FontSize="11" Foreground="#333" HorizontalAlignment="Right" Margin="2,0,0,0"/>
