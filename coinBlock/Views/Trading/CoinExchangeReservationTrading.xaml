                                                <TextBlock Text="{x:Static localization:Resource.CoinExchangeReservationTrading_1_14_2}" FontSize="11" Foreground="#666"  HorizontalAlignment="Left" VerticalAlignment="Center"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
