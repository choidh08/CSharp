                                    </Border>
                                    <Border Grid.Column="2" Grid.Row="1"  Background="#e5e5e5" BorderThickness="1" BorderBrush="#d8d8d8">
                                        <TextBlock Text="{x:Static localization:Resource.CoinExchangeReservationTrading_1_17}" FontSize="12" Foreground="#666"  HorizontalAlignment="Center" VerticalAlignment="Center"/>
